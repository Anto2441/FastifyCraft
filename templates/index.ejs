<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mon Blog</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="mt-4 mb-4">
        <form action="/logout" method="post">
          <button class="btn btn-danger">Deconnexion</button>
        </form>
      </div>
      <!-- Formulaire pour ajouter un titre -->
      <% if (locals.user) { %>
      <form action="/" method="post" class="mb-4">
        <div class="mb-3">
          <label for="title" class="form-label">Titre</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="Entrez un titre"
            required
          />
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Contenu</label>
          <textarea
            id="content"
            name="content"
            class="form-control"
            placeholder="Entrez du contenu"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Soumettre</button>
      </form>

      <% } %>

      <!-- Titre principal -->
      <h1 class="my-5">Bienvenue sur mon blog!</h1>

      <!-- Liste des articles -->
      <div class="row row-cols-2">
        <% for (const post of posts) { %>
        <div class="col mb-2">
          <%- include('./shared/post.ejs', { post }) %>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
